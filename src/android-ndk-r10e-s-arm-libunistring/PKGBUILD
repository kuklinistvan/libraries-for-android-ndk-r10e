# Maintainer: Kuklin Istv√°n Alexander <istvan@codekuklin.com>
baselibname=libunistring
pkgname=android-ndk-r10e-s-arm-"$baselibname"
pkgver=0.9.10
pkgrel=1
pkgdesc="This library provides functions for manipulating Unicode strings and for manipulating C strings according to the Unicode standard."
arch=('any')
url=""
groups=()
depends=(
  'android-ndk-r10e-s-arm'
)
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=("!strip" "staticlibs")
install=
changelog=
source=(
  "https://ftp.gnu.org/gnu/libunistring/libunistring-0.9.10.tar.gz"
)
md5sums=('0d3274e9838396b12200f8b54ddaf43b')

noextract=()

build() {
  cd "$baselibname"-"$pkgver"
  unset CFLAGS CXXFLAGS
  ./configure --enable-static --host=arm-linux-androideabi --prefix=/usr/ndk/r10e/standalone/armeabi/sysroot/usr
  make
}

package() {
  cd "$srcdir"/"$baselibname"-"$pkgver"
  make DESTDIR="$pkgdir" install
  rm -rf "$pkgdir"/usr/ndk/r10e/standalone/armeabi/sysroot/usr/share/info
}
