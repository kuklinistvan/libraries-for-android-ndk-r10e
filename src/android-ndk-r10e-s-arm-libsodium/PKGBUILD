baselibname=libsodium
pkgname=android-ndk-r10e-s-arm-"$baselibname"
pkgver=1.0.18
pkgrel=1
pkgdesc="Sodium is a modern, easy-to-use software library for encryption, decryption, signatures, password hashing and more."
arch=('any')

depends=(
  'android-ndk-r10e-s-arm'
)

options=("!strip" "staticlibs")

source=(
  "https://download.libsodium.org/libsodium/releases/$baselibname-$pkgver-stable.tar.gz"
)

build() {
  cd libsodium-stable
  unset CFLAGS CXXFLAGS
  ./configure --enable-static --host=arm-linux-androideabi --prefix=/usr/ndk/r10e/standalone/armeabi/sysroot/usr
  make 
}

package() {
  cd "$srcdir"/libsodium-stable
  make DESTDIR="$pkgdir" install
  rm -rf "$pkgdir"/usr/ndk/r10e/standalone/armeabi/sysroot/usr/share/info
}

md5sums=('5c77950500322b414389d16ed743aab3')

# Unused options:

url=""
groups=()
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
install=
changelog=
noextract=()
