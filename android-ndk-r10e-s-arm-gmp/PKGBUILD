pkgname=android-ndk-r10e-s-arm-gmp
pkgver=6.2.0
pkgrel=1
pkgdesc="A free library for arbitrary precision arithmetic, operating on signed integers, rational numbers, and floating-point numbers."
arch=('any')
url=""
groups=()
depends=(
  'android-ndk-r10e-s-arm'
)
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=("!strip" "staticlibs")
install=
changelog=
source=(
  "https://gmplib.org/download/gmp/gmp-$pkgver.tar.xz"
)
md5sums=('a325e3f09e6d91e62101e59f9bda3ec1')

noextract=()

build() {
  cd gmp-"$pkgver"
  unset CFLAGS CXXFLAGS
  ./configure --enable-static --host=arm-linux-androideabi --prefix=/usr/ndk/r10e/standalone/armeabi/sysroot
  make 
}

package() {
  cd "$srcdir"/gmp-"$pkgver"
  make DESTDIR="$pkgdir" install
}
